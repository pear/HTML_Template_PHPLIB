  <dir name="/">
   <file name="bin/html_template_phplibtool" role="script" install-as="html_template_phplibtool" />

   <dir name="examples">
    <file name="authors.php" role="doc" />
    <file name="authors.tpl" role="doc" />
    <file name="block.ihtml" role="doc" />
