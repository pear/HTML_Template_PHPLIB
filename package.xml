    <file name="HTML_Template_PHPLIB_ValidatorTest.php" role="test" />
    <dir name="templates">
     <file name="block.tpl"   role="test" />
     <file name="block2.tpl"  role="test" />
     <file name="block3.tpl"  role="test" />
     <file name="simple.tpl"  role="test" />
     <file name="simple2.tpl" role="test" />
    </dir>
   </dir>
  </dir>
